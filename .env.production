# Production Environment Configuration
# Copy this file to .env.production and update with production values

# Flask Configuration
DEBUG=False
SECRET_KEY=your-very-secure-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///hydepark_lyve_prod.db

# HikCentral Configuration - UPDATE THESE WITH PRODUCTION VALUES
HIKCENTRAL_BASE_URL=https://your-production-hikcentral-server/artemis
HIKCENTRAL_APP_KEY=your-production-app-key
HIKCENTRAL_APP_SECRET=your-production-app-secret
HIKCENTRAL_USER_ID=your-production-user
HIKCENTRAL_ORG_INDEX_CODE=1
HIKCENTRAL_VERIFY_SSL=True

# API Configuration
API_TIMEOUT=30
MAX_RETRIES=3

# Authentication Configuration - CHANGE THIS IN PRODUCTION
LYVE_API_KEY=your-secure-api-key-here
REQUIRE_API_KEY=True

# Face Data Configuration
MAX_FACE_IMAGES=5
FACE_IMAGE_MAX_SIZE=2097152
FACE_IMAGE_QUALITY_THRESHOLD=70

# Batch Operations Configuration
MAX_BATCH_SIZE=100
BATCH_TIMEOUT=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/hydepark_lyve_prod.log

# Security Configuration
MAX_CONTENT_LENGTH=16777216
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Performance Configuration
ENABLE_CACHING=True
CACHE_TTL=300

# Monitoring Configuration
ENABLE_METRICS=True
METRICS_ENDPOINT=/metrics